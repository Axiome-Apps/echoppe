# ===========================================
# Ã‰choppe - Environment Configuration
# ===========================================
# Copy this file to .env and configure
# Or run: ./scripts/docker-init.sh

# ===========================================
# Database
# ===========================================
DATABASE_URL=postgresql://echoppe:echoppe@localhost:5432/echoppe
POSTGRES_USER=echoppe
POSTGRES_PASSWORD=echoppe
POSTGRES_DB=echoppe

# ===========================================
# Redis
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# API
# ===========================================
API_PORT=7532
# Public URL for API (used by store for API calls)
API_PUBLIC_URL=http://localhost:7532

# ===========================================
# Admin Dashboard
# ===========================================
ADMIN_PORT=3211
VITE_API_URL=http://localhost:7532
# Public URL (for CORS)
ADMIN_URL=http://localhost:3211

# ===========================================
# Store (Next.js)
# ===========================================
STORE_PORT=3141
NEXT_PUBLIC_API_URL=http://localhost:7532
# Public URL (for CORS)
STORE_URL=http://localhost:3141

# ===========================================
# Security (REQUIRED for production)
# ===========================================
# 32-byte hex key for encrypting sensitive data
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# ===========================================
# Docker Distribution (optional)
# ===========================================
# Registry for pulling images
DOCKER_REGISTRY=echoppe
# Image version tag
VERSION=latest

# ===========================================
# Payment Providers (optional)
# ===========================================
# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_WEBHOOK_ID=

# ===========================================
# Email Provider (optional)
# ===========================================
# SMTP
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=

# Resend (alternative)
RESEND_API_KEY=

# Brevo (alternative)
BREVO_API_KEY=

# ===========================================
# DEV CREDENTIALS (created by db:seed)
# ===========================================
# Admin login: admin@echoppe.dev / admin123
# DB access:   echoppe / echoppe
