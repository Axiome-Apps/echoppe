{
  "name": "@echoppe/core",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./db": "./src/db/index.ts",
    "./db/schema": "./src/db/schema/index.ts"
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "db:generate": "bun --env-file=../../.env drizzle-kit generate",
    "db:migrate": "bun --env-file=../../.env drizzle-kit migrate",
    "db:push": "bun --env-file=../../.env drizzle-kit push",
    "db:studio": "bun --env-file=../../.env drizzle-kit studio",
    "db:seed": "bun --env-file=../../.env src/db/seed.ts"
  },
  "dependencies": {
    "@echoppe/shared": "workspace:*",
    "@getbrevo/brevo": "^3.0.1",
    "@paypal/checkout-server-sdk": "^1.0.3",
    "drizzle-orm": "^0.45.1",
    "nodemailer": "^7.0.12",
    "postgres": "^3.4.7",
    "resend": "^6.6.0",
    "stripe": "^20.1.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/nodemailer": "^7.0.4",
    "bun-types": "^1.3.4",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3"
  }
}
